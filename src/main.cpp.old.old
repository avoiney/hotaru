using namespace std;

static const size_t WINDOW_WIDTH = 512;
static const size_t WINDOW_HEIGHT = 512;
static const size_t BYTES_PER_PIXEL = 32;
static const char* WINDOW_TITLE = "Imac Particle System";
static const int NB_PARTICLE = 100;

// typedef struct {
//     int freq;
//     Uint16 format;
//     Uint8  channels;
//     Uint8  silence;
//     Uint16 samples;
//     Uint32 size;
